{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "headers": [
    {
      "source": "/(.*)\\.(js|css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Encoding",
          "value": "gzip"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/(.*)\\.(png|jpg|jpeg|webp|avif|svg|gif|ico|woff2|woff|ttf|eot)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/(.*)\\.(xml|txt|json)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=1800, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/sat-superscore-calculator.html",
      "destination": "/tools/sat-superscore-calculator",
      "permanent": true
    },
    {
      "source": "/psat-to-sat-predictor.html",
      "destination": "/tools/psat-to-sat-predictor",
      "permanent": true
    },
    {
      "source": "/gpa-calculator.html",
      "destination": "/tools/master-gpa-calculator",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "destination": "https://satscorecalculator.io/$1",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "sat-score-calculator.vercel.app"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/tools/sat-superscore-calculator",
      "destination": "/sat-superscore-calculator.html"
    },
    {
      "source": "/tools/psat-to-sat-predictor",
      "destination": "/psat-to-sat-predictor.html"
    },
    {
      "source": "/tools/master-gpa-calculator",
      "destination": "/gpa-calculator.html"
    }
  ]
}